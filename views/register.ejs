<% include partials/header %>
<div class="container">
    <h1 style="text-align: center;">Sign Up</h1>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/register" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="username" placeholder="Username">
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Password">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit" value="Logged In!">Sign Up</button>
            </div>
        </form>
        <br>
        <a class="btn btn-outline-secondary" href="/campgrounds">Go Back</a>
        <a class="btn btn-outline-secondary float-right" href="/login">Login</a>
    </div>
</div>

<% include partials/footer %>